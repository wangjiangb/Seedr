<h1>Listing l_tweets</h1>

<table>
  <tr>
    <th>Tid</th>
    <th>Title</th>
    <th>Message</th>
    <th>User</th>
    <th>Num of retweets</th>
    <th>Num of replies</th>
    <th>Post date</th>
    <th>Sentiment</th>
    <th>Question</th>
    <th>Sp</th>
    <th>Newtweets</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @l_tweets.each do |l_tweet| %>
  <tr>
    <td><%= l_tweet.tid %></td>
    <td><%= l_tweet.title %></td>
    <td><%= l_tweet.message %></td>
    <td><%= l_tweet.user_id %></td>
    <td><%= l_tweet.num_of_retweets %></td>
    <td><%= l_tweet.num_of_replies %></td>
    <td><%= l_tweet.post_date %></td>
    <td><%= l_tweet.sentiment %></td>
    <td><%= l_tweet.question %></td>
    <td><%= l_tweet.sp %></td>
    <td><%= l_tweet.newtweets %></td>
    <td><%= link_to 'Show', l_tweet %></td>
    <td><%= link_to 'Edit', edit_l_tweet_path(l_tweet) %></td>
    <td><%= link_to 'Destroy', l_tweet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

