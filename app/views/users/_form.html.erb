	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" />	<link rel="stylesheet" type="text/css" href="/stylesheets/home.css" />	</head>
	<body>
		<div class="container">
			<div id="header" class="span12">
				<h1>Seedr</h1>
			</div>
			<div class="span12">
				<div class="span5">
					<h3><strong>STEP 1 - Create your account: </strong></h3>
				</div>  
				<div class="span8">
					<%= form_for @user do |f| %>
				  	<% if @user.errors.any? %>
				  		<div style="height: 20px"></div>
				   		<div class="span6" id="error_explanation">
				      		<h2><%= pluralize(@user.errors.count, "error") %>
				        		prohibited this user from being saved:</h2>
				      			<ul>
				      				<% @user.errors.full_messages.each do |msg| %>
				        			<li><%= msg %></li>
				      				<% end %>
				      			</ul>
				    	</div>
				  	<% end %>
				</div>
				<div class="span10">
					<fieldset>
					  <div class="span10">
					  	<%= f.label :name %>:
					    <%= f.text_field :name, :size => 40 %>
					  </div>
					  
					  <div class="span10">
					    <%= f.label :email %>:
					    <%= f.text_field :email, :size => 40 %>
					  </div>
					
					  <div class="span10">
					    <%= f.label :password, 'Password' %>:
					    <%= f.password_field :password, :size => 40 %>
					  </div>
					
					  <div class="span10">
					    <%= f.label :password_confirmation, 'Confirm' %>:
					    <%= f.password_field :password_confirmation, :size => 40 %>
					  </div>
						<div style="height: 40px"></div>
						
					  <div class="span10">
					    <%= f.submit %>
					  	</div>

					 	</fieldset>
				  
						<% end %>
						<div style="height: 50px"></div>		
				</div>
				
				<div class="span10">
					<font size="4">STEP 2 - Add your twitter account</font> 
					<div style="height: 50px">
					</div>
				</div>
				<!--<div class="span6">
